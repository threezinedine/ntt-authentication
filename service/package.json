{
	"name": "auth-service",
	"scripts": {
		"compile": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"start": "npm run compile && ts-node dist/main.js",
		"dev": "nodemon --config nodemon.dev.json",
		"test": "jest --config jest.config.ts --runInBand --detectOpenHandles --forceExit",
		"test:watch": "nodemon --config nodemon.test.json"
	},
	"dependencies": {
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"mysql2": "^3.14.1"
	},
	"devDependencies": {
		"@types/dotenv": "^6.1.1",
		"@types/express": "^5.0.3",
		"@types/jest": "^29.5.14",
		"@types/node": "^24.0.1",
		"@types/supertest": "^6.0.3",
		"jest": "^29.7.0",
		"nodemon": "^3.1.10",
		"supertest": "^7.1.1",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.8.3"
	}
}
