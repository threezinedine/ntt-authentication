{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "src/**/*.test.ts"],
	"tsc-alias": {
		"resolveFullPaths": true,
		"verbose": true
	}
}
